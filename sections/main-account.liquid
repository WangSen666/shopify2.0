{{ 'customer.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}
    px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}
    px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}
      px;
      padding-bottom: {{ section.settings.padding_bottom }}
      px;
    }
  }
  .flex_between {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .flex_around {
    display: flex;
    justify-content: space-around;
    align-items: center;
  }
  .flex_end {
    display: flex;
    justify-content: flex-end;
  }
  .account {
    padding: 64px 0;
  }
  .login-out {
    font-size: 28px !important;
    font-family: "KumbhSans-Bold" !important;
  }
  .account-details-box {
    margin: 50px auto !important;
    width: 100%;
    position: relative;
  }
  .account-details {
    display: flex;
    justify-content: space-around;
    align-items: center;
    padding-left: 40px !important;
  }
  .account-details-wrappper-box {
    width: 100%;
    height: 226px;
    display: flex;
    align-items: center;
    border-radius: 14px;
    box-shadow: 0 0 20px #bbbbbb;
  }
  .account-details-wrappper-box div {
    padding-left: 20px;
    font-size: 24px;
    font-family: "KumbhSans-Bold" !important;
  }
  .account-details-other-wrappper-box {
    position: absolute;
    right: 0;
    top: -10px;
    width: 50%;
    height: 246px;
    background: #2E5955;
    clip-path: polygon(2% 0%, 100% 0%, 100% 100%, 0% 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    color: #fff;
    font-size: 20px;
    font-family: "KumbhSans-Bold" !important;
  }
  .user-logo {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 110px;
    height: 110px;
    border-radius: 55px;
    background: #2E5955;
    padding-left: 0 !important;
  }
  .user-logo img {
    width: 110px;
    height: 110px;
  }
  .other-wrapper-item {}
  .other-wrapper-img-box {
    width: 110px;
    height: 110px;
    border-radius: 55px;
    background: #9ED835;
    margin: 0 auto;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .orders-history-title {
    font-size: 28px !important;
    font-family: "KumbhSans-Bold" !important;
  }
  .account-details-title {
    font-size: 28px !important;
    font-family: "KumbhSans-Bold" !important;
  }
  .order-and-account {
    align-items: flex-start;
  }
  .order-box {
    width: 50%;
  }
  .order-item {
    padding: 24px;
    box-shadow: 0 0 20px #bbbbbb;
    border-radius: 14px;
    margin: 14px auto;
  }
  .buy-again {
    padding: 4px 14px;
    border-radius: 14px;
    box-shadow: 0 0 10px #bbbbbb;
  }
  .buy-again-a {
    text-decoration: none !important;
  }
  .buy-again-a img {
    vertical-align: middle;
  }
  @media screen and (max-width:750px) {
    .account-details-box {
      margin: 24px auto !important;
    }
    .account-details-wrappper-box {
      height: 146px;
    }
    .account-details-other-wrappper-box {
      display: none !important;
    }
    .account-details-wrappper-box div {
      font-size: 18px !important;
      padding-left: 14px;
    }
    .account-details {
      padding-left: 14px !important;
    }
    .orders-history-title,
    .account-details-title {
      margin-top: 2rem !important;
    }
    .login-out {
      font-size: 18px !important;
      font-family: "KumbhSans-Bold" !important;
    }
    .user-logo {
      width: 60px;
      height: 60px;
      border-radius: 60px;
      padding-left: 0 !important;
    }
    .user-logo img {
      width: 60px;
      height: 60px;
    }

    .order-and-account {
      flex-wrap: wrap;
    }
    .order-box {
      width: 100%;
    }
    .order-item {
      padding: 18px;
    }
  }
{%- endstyle -%}

<div class="customer account section-{{ section.id }}-padding">
  <div class="flex_between">
    <h1 class="customer__title">Your Account</h1>
    <a class="login-out" href="{{ routes.account_logout_url }}">
      {% comment %} <svg
      style="width:3rem;"
      xmlns="http://www.w3.org/2000/svg"
      aria-hidden="true"
      focusable="false"
      fill="none"
      viewBox="0 0 18 19">
      <path
      fill-rule="evenodd"
      clip-rule="evenodd"
      d="M6 4.5a3 3 0 116 0 3 3 0 01-6 0zm3-4a4 4 0 100 8 4 4 0 000-8zm5.58 12.15c1.12.82 1.83 2.24 1.91 4.85H1.51c.08-2.6.79-4.03 1.9-4.85C4.66 11.75 6.5 11.5 9 11.5s4.35.26 5.58 1.15zM9 10.5c-2.5 0-4.65.24-6.17 1.35C1.27 12.98.5 14.93.5 18v.5h17V18c0-3.07-.77-5.02-2.33-6.15-1.52-1.1-3.67-1.35-6.17-1.35z"
      fill="currentColor">
      </svg> {% endcomment %}
      {{ 'customer.log_out' | t }}
    </a>
  </div>



  <div class="account-details-box">
    <div class="account-details-wrappper-box">
      <div class="account-details">
        <div class="user-logo">
          <img src="{{'user_logo.png' | asset_url }}" />
        </div>
        <div>
          <div>{{ customer.name }}</div>
          <div>{{ customer.email }}</div>
        </div>
      </div>
    </div>
    <div class="account-details-other-wrappper-box">
      <div class="other-wrapper-item">
        <div class="other-wrapper-img-box">
          <img src="{{'orders-history.png' | asset_url}}" />
        </div>
        <div>Ordes History</div>
      </div>
    </div>
  </div>

  <div class="flex_between order-and-account" style="">
    <div class="order-box">
      <h2 class="orders-history-title">Order History</h2>

      {% paginate customer.orders by 20 %}
        {%- if customer.orders.size > 0 -%}
          {% comment %} <table role="table" class="order-history">
          <caption class="visually-hidden">{{ 'customer.orders.title' | t }}</caption>
          <thead role="rowgroup">
          <tr role="row">
          <th
          id="ColumnOrder"
          scope="col"
          role="columnheader">{{ 'customer.orders.order_number' | t }}</th>
          <th
          id="ColumnDate"
          scope="col"
          role="columnheader">{{ 'customer.orders.date' | t }}</th>
          <th
          id="ColumnPayment"
          scope="col"
          role="columnheader">{{ 'customer.orders.payment_status' | t }}</th>
          <th
          id="ColumnFulfillment"
          scope="col"
          role="columnheader">{{ 'customer.orders.fulfillment_status' | t }}</th>
          <th
          id="ColumnTotal"
          scope="col"
          role="columnheader">{{ 'customer.orders.total' | t }}</th>
          </tr>
          </thead>
          <tbody role="rowgroup">
          {%- for order in customer.orders -%}
          <tr role="row">
          <td
          id="RowOrder"
          role="cell"
          headers="ColumnOrder"
          data-label="{{ 'customer.orders.order_number' | t }}">
          <a href="{{ order.customer_url }}" aria-label="{{ 'customer.orders.order_number_link' | t: number: order.name }}">
          {{ order.name }}
          </a>
          </td>
          <td
          headers="RowOrder ColumnDate"
          role="cell"
          data-label="{{ 'customer.orders.date' | t }}">
          {{ order.created_at | time_tag: format: 'date' }}
          </td>
          <td
          headers="RowOrder ColumnPayment"
          role="cell"
          data-label="{{ 'customer.orders.payment_status' | t }}">
          {{ order.financial_status_label }}
          </td>
          <td
          headers="RowOrder ColumnFulfillment"
          role="cell"
          data-label="{{ 'customer.orders.fulfillment_status' | t }}">
          {{ order.fulfillment_status_label }}
          </td>
          <td
          headers="RowOrder ColumnTotal"
          role="cell"
          data-label="{{ 'customer.orders.total' | t }}">
          {{ order.total_price | money_with_currency }}</td>
          </tr>
          {%- endfor -%}
          </tbody>
          </table> {% endcomment %}
          {%- for order in customer.orders -%}

            <div class="order-item">
              <div class="flex_between">
                <div>{{ order.billing_address | map: "country" }}
                  {{ order.billing_address | map: "company" }}
                  {{ order.billing_address | map: "city" }}
                </div>
                <div>Order {{ order.name }}</div>
              </div>
              <div class="flex_between">
                <div>Price {{ order.total_price | money_with_currency }}</div>
                <div>{{ order.created_at | time_tag: format: 'date' }}</div>
              </div>
              <div class="flex_between">
                <div>Payment Status {{ order.financial_status_label }}</div>
                <div>
                  <a
                    style="color:#4DC4FF;text-decoration:none;"
                    target="_blank"
                    href="{{ order.customer_url }}"
                    aria-label="{{ 'customer.orders.order_number_link' | t: number: order.name }}">
                    details
                  </a>
                </div>
              </div>

              <div class="flex_end" style="margin:14px auto;">
                <div class="buy-again">
                  <a
                    class="buy-again-a"
                    target="_blank"
                    href="https://podxgo.com/products/reserve-now">
                    <img src="{{'buy-again.png'|asset_url}}" />
                    Buy Again
                  </a>
                </div>
              </div>
            </div>
          {% endfor %}

        {%- else -%}
          <p>{{ 'customer.orders.none' | t }}</p>
        {%- endif -%}

        {%- if paginate.pages > 1 -%}
          {%- if paginate.parts.size > 0 -%}
            <nav
              class="pagination"
              role="navigation"
              aria-label="{{ 'general.pagination.label' | t }}">
              <ul role="list">
                {%- if paginate.previous -%}
                  <li>
                    <a href="{{ paginate.previous.url }}" aria-label="{{ 'general.pagination.previous' | t }}">
                      <svg
                        aria-hidden="true"
                        focusable="false"
                        viewBox="0 0 10 6">
                        <path
                          fill-rule="evenodd"
                          clip-rule="evenodd"
                          d="M9.354.646a.5.5 0 00-.708 0L5 4.293 1.354.646a.5.5 0 00-.708.708l4 4a.5.5 0 00.708 0l4-4a.5.5 0 000-.708z"
                          fill="currentColor">
                      </svg>
                    </a>
                  </li>
                {%- endif -%}

                {%- for part in paginate.parts -%}
                  <li>
                    {%- if part.is_link -%}
                      <a href="{{ part.url }}" aria-label="{{ 'general.pagination.page' | t: number: part.title }}">{{ part.title }}</a>
                    {%- else -%}
                      {%- if part.title == paginate.current_page -%}
                        <span aria-current="page" aria-label="{{ 'general.pagination.page' | t: number: part.title }}">{{ part.title }}</span>
                      {%- else -%}
                        <span>{{ part.title }}</span>
                      {%- endif -%}
                    {%- endif -%}
                  </li>
                {%- endfor -%}

                {%- if paginate.next -%}
                  <li>
                    <a href="{{ paginate.next.url }}" aria-label="{{ 'general.pagination.next' | t }}">
                      <svg
                        aria-hidden="true"
                        focusable="false"
                        viewBox="0 0 10 6">
                        <path
                          fill-rule="evenodd"
                          clip-rule="evenodd"
                          d="M9.354.646a.5.5 0 00-.708 0L5 4.293 1.354.646a.5.5 0 00-.708.708l4 4a.5.5 0 00.708 0l4-4a.5.5 0 000-.708z"
                          fill="currentColor">
                      </svg>
                    </a>
                  </li>
                {%- endif -%}
              </ul>
            </nav>
          {%- endif -%}
        {%- endif -%}
      {% endpaginate %}
    </div>
    <div>
      {% comment %} daadd {% endcomment %}
      <h2 class="account-details-title">Account Details</h2>

      {% comment %} {{ customer.default_address | format_address }} {% endcomment %}
      {{ customer.default_address | format_address }}


      <a href="{{ routes.account_addresses_url }}">
        {{ 'customer.account.view_addresses' | t }} ({{ customer.addresses_count }})
      </a>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "t:sections.main-account.name",
    "settings": [
      {
        "type": "header",
        "content": "t:sections.all.padding.section_padding_heading"
      }, {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      }
    ]
  }
{% endschema %}