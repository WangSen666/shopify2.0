<div
  id="Banner-{{ section.id }}"
  style="background:{{ section.settings.background_color }};"
  class="banner {% if section.settings.image != blank %}  bg_wrapper {% endif %} banner--content-align-{{ section.settings.desktop_content_alignment }} banner--content-align-mobile-{{ section.settings.mobile_content_alignment }} banner--{{ section.settings.image_height }}{% if section.settings.stack_images_on_mobile and section.settings.image != blank and section.settings.image_2 != blank %} banner--stacked{% endif %}{% if section.settings.adapt_height_first_image and section.settings.image != blank %} banner--adapt{% endif %}{% if section.settings.show_text_below %} banner--mobile-bottom{%- endif -%}{% if section.settings.show_text_box == false %} banner--desktop-transparent{% endif %} ">
  
  {%- if section.settings.image != blank -%}
    <div class="banner__media media{% if section.settings.image == blank and section.settings.image_2 == blank %} placeholder{% endif %}{% if section.settings.image_2 != blank %} banner__media-half{% endif %}">
      {%-liquid
        assign image_height = section.settings.image.width | divided_by: section.settings.image.aspect_ratio
        if section.settings.image_2 != blank
          assign image_class = "banner__media-image-half"
        endif
        if section.settings.image_2 != blank and section.settings.stack_images_on_mobile
          assign sizes = "(min-width: 750px) 50vw, 100vw"
        elsif section.settings.image_2 != blank
          assign sizes = "50vw"
        else
          assign sizes = "100vw"
        endif
      -%}
      {{ section.settings.image | image_url: width: 1500 | image_tag: 
       loading: 'lazy'
       , width: section.settings.image.width
       , height: image_height
       , class: image_class
       , sizes: sizes
       , widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'
       , alt: section.settings.image.alt | escape }}
    </div>

  {%- endif -%}
  <div class="diversified-lr-new-blocks-banner__content{% if section.settings.is_all_screen=="false" %}  page-width{% endif %}" style="padding-top:{{ section.settings.padding_top }}px;padding-bottom:{{ section.settings.padding_bottom }}px;">
    {% if section.settings.heading!=blank %}
      <div class="diversified-lr-new-blocks-heading" style="font-size:{{ section.settings.heading_size }}px;">
        {{ section.settings.heading }}
      </div>
    {% endif %}
    
    <div class="diversified-lr-new-blocks-banner__box content-container content-container--full-width-mobile color-{{ section.settings.color_scheme }} " style="{% if section.settings.layout=='image_first' %} flex-direction:row-reverse !important;{% endif %}">
      <div class="banner__box-item">

        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'heading' -%}
            <h2
              class="banner__heading"
              {{ block.shopify_attributes }}
              style="color:{{block.settings.font_color}};font-weight:{{ block.settings.font-weight }};font-size:{{ block.settings.font_size }}px;margin-top:{{block.settings.margin-top}}px;margin-bottom:{{block.settings.margin-bottom}}px;">
              <span>{{ block.settings.heading | escape }}</span>
            </h2>
            {%- when 'text' -%}
            <div
              class="diversified-lr-new-block_text_body {{ block.settings.text_style }}"
              {{ block.shopify_attributes }}
              style="color:{{block.settings.font_color}};font-style:{{block.settings.font_style}};font-size:{{block.settings.font_size}}px;margin-top:{{block.settings.margin-top}}px;margin-bottom:{{block.settings.margin-bottom}}px;font-weight:{{ block.settings.font_weight }};">
              <span>{{ block.settings.text | escape }}</span>
            </div>
            {%- when 'href_text' -%}
            <a href="{{ block.settings.href_link}}" target="_blank">{{ block.settings.href_label }}</a>
        
          {%- endcase -%}
        {%- endfor -%}


        <div class="card-flex-box">
          {%- for block in section.blocks -%}
            {%- case block.type -%}

              {%- when 'pictureCard' -%}
              <div class="img-box">
                <img
                  src="{{ block.settings.picture-card-item  | image_url }}"
                  width="{{block.settings.image_width }}"
                  loading="lazy" />
              </div>

            {%- endcase -%}

          {%- endfor -%}
        </div>

        {%- for block in section.blocks -%}
            {%- case block.type -%}
              {%- when 'buttons' -%}
            <div
              class="banner__buttons lr-block-component__button {% if block.settings.button_label_1 != blank and block.settings.button_label_2 != blank %} banner__buttons--multiple{% endif %}"
              {{ block.shopify_attributes }}
              style="margin-top:{{  block.settings.margin_top }}px;margin-bottom:{{  block.settings.margin_bottom }}px;">
              {%- if block.settings.button_label_1 != blank -%}
                <a target="_blank" style="z-index:2;border:1px solid {{block.settings.button_color}};color:{{block.settings.button_color}};" {% if block.settings.button_link_1 == blank %}role="link" aria-disabled="true"{% else %} href="{{ block.settings.button_link_1 }}"{% endif %} class="button{% if block.settings.button_style_secondary_1 %} button--secondary{% else %} button--primary{% endif %}">{{ block.settings.button_label_1 | escape }}
                    {% if section.settings.image == blank %}
                    <img
                    src="{{   'button_logo_2.png' | asset_url }}"
                    width="12"
                    height="12" />
                  {% endif %}
                  {% if section.settings.image != blank %}
                    <img
                      src="{{   'button_logo_1.png' | asset_url }}"
                      width="12"
                      height="12" />
                    {% endif %}
                </a>
              {%- endif -%}
              {%- if block.settings.button_label_2 != blank -%}
                <a target="_blank" {% if block.settings.button_link_2 == blank %}role="link" aria-disabled="true"{% else %}href="{{ block.settings.button_link_2 }}"{% endif %} class="button{% if block.settings.button_style_secondary_2 %} button--secondary{% else %} button--primary{% endif %}">{{ block.settings.button_label_2 | escape }}
                  <img
                    src="{{'button_logo_1.png'  | asset_url }}"
                    width="12"
                    height="12" />
                </a>
              {%- endif -%}

            </div>
            {%- endcase -%}

          {%- endfor -%}
      </div>
      {%- if section.settings.is_lr == 'true' -%}
        <div class="banner__box-item" style="{% if section.settings.is_imgBg == 'true' %} width:100%;height:100%;background:#5F6061;display: flex;justify-content: center;align-items: center;margin-top:0 !important;{% endif %}">
          {%- for block in section.blocks -%}
            {%- case block.type -%}
              {%- when 'image_wrapper' and block.settings.image_1 != blank -%}
              <div class="diversified-lr-new-image-wrapper"   style=" background:url({{ block.settings.image_1 | image_url }}) no-repeat center center;background-size:cover; {% if section.settings.is_imgBg == 'true' %}width:80%;{% endif %}{% if section.settings.is_imgBg == 'false' %}width:100%;height:756px;margin: 0 auto;display: block;{% endif %}">

              </div>
              
              {%- when 'picture_heading' -%}
                <div class="picture-heading banner__heading" style="font-size:{{block.settings.font_size}}px;margin-top:{{ block.settings.margin_top }}px;margin-bottom:{{ block.settings.margin_bottom }}px;">
                  {{ block.settings.heading_1 }}
                </div>
              {%- when 'picture_text' -%}
                <div class="picture-text" style="font-size:{{block.settings.font_size}}px;margin-top:{{ block.settings.margin_top }}px;margin-bottom:{{ block.settings.margin_bottom }}px;">
                  {{ block.settings.text_1}}
                </div>
            {%- endcase -%}
          {%- endfor -%}
        </div>
      {%- endif -%}
    </div>

  </div>
</div>

