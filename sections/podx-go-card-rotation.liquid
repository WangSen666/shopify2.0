
<style>
  .podx-go-card-head{
    max-width:1150px;
    margin:44px auto;
    text-align:center;
  }
  .podx-go-card-rotation{
    position:relative;
    max-width:1680px;
    margin:0 auto;
    padding:100px 0;
    height:626px;
  }
  .podx-go-card-rotation-title{
    font-family: "KumbhSans-Bold" !important;
  }
  .left-icon{
    top:50%;
    left:24px;
     transform:translateY(-50%);
    
    position:absolute;
  }
   .right-icon{
    top:50%;
    right:24px;
     transform:translateY(-50%);
    position:absolute;
  }
  .podx-go-card-rotation-list{
    width:80%;
    height:446px;
    position:absolute;
    /* overflow:auto; */
    top:50%;
    left:50%;
    transform:translate(-50%,-50%);
    z-index:2;
  }
  .podx-go-card-rotation-list-box{
    height:406px;
    display:flex;
    justify-content:space-between;
    align-items:center;
    position:absolute;
  }
 .podx-go-card-rotation-item{
    /* width:332px; */
    height:322px;
    float:left;
  }
  .podx-go-card-rotation-item:hover{
    box-shadow: 0 0 8px #333333;
    
  }
 .swiper-slide-active,.swiper-slide-duplicate-active{
      transform: scale(1.2) !important;
      z-index: 3;
	}
  @media screen and (max-width:1180px){
    .podx-go-card-rotation-title{
      font-size:36px !important;
    }
    .podx-go-card-subtitle{
      font-size:20px !important;
    }
    .podx-go-card-rotation-list{
      width:100%;
    }
    .podx-go-card-rotation-item{
      width:200px;
      /* height:150px; */
   
    }
    .podx-go-card-rotation-item img{
      max-width:40px;
    }
    .text-wrapper{
      font-size:16px !important;
    }
  }
   @media screen and (max-width:990px){
    .swiper-slide-active, .swiper-slide-duplicate-active{
      /* transform: scale(1) !important; */
      transform: scale(1.6) !important;
      
    }
   }

  @media screen and (max-width:750px){
    .podx-go-card-rotation{
      padding:24px 0;
      /* height:424px; */
    }
    .podx-go-card-rotation{
      height:160px !important;
    }
    .podx-go-card-rotation-list{
      height:120px;
    }
    .podx-go-card-rotation-list-box{
      height:120px;
    }
    .podx-go-card-rotation-item{
      height:100px !important;
    }
    .podx-go-card-rotation-list{
      width:80%;
      position:relaive;
    }
   .podx-go-card-rotation-title{
      font-size:20px !important;
     line-height:24px !important;
/*      padding:0 14px; */
    }
    .podx-go-card-subtitle{
      font-size:14px !important;
      line-height:16px;
      text-align:left;
    }
    .podx-go-card-head{
      margin:34px auto 0px !important;
      padding:14px;
      text-align:left;
    }
    .text-wrapper{
     font-size:14px !important;
    }
   .pgcr-left-icon{
     left:10px;
     z-index:4;
     width:20px;
   }
    .pgcr-right-icon{
      right:10px;
     z-index:4;
     width:20px;
    }
  }
</style>


<div class="podx-go-card-head" id="{{ section.settings.href_id }}">
  <div class="podx-go-card-rotation-title" style="font-size:{{section.settings.heading_size  }}px;">
    {{ section.settings.heading }}
  </div>
  <div class="podx-go-card-subtitle" style="font-size:{{section.settings.text_size  }}px;">
    {{ section.settings.text_1 }}
  </div>
</div>
<div class="podx-go-card-rotation ">
  <img class="pgcr-left-icon left-icon" src="https://cdn.shopify.com/s/files/1/0596/2249/0212/files/leftIcon.png?v=1678695161" />
    <img class="pgcr-right-icon right-icon"  src="https://cdn.shopify.com/s/files/1/0596/2249/0212/files/rightIcon.png?v=1678695165" />
  <div class="podx-go-card-rotation-list swiper podx-go-card-rotation-swiper ">
      <div class="pgcr-swiper-button-prev"></div>
      <div class="pgcr-swiper-button-next" ></div>
    <div class="podx-go-card-rotation-list-box swiper-wrapper">
       {% for block in section.blocks %}
          
          <div class="podx-go-card-rotation-item swiper-slide" style="background:url('{{  block.settings.image_1 | image_url  }}') no-repeat center center;background-size:cover;">
            
          </div>
        {% endfor %}
      
    </div>
   
    
  </div>

  

  
</div>

<script>
  var thisIndex = 0;
   $(function () {
    var windowWidth = document.documentElement.clientWidth;
      // autoplay:true,
     // 
  var swiper = new Swiper(".podx-go-card-rotation-swiper", {
        slidesPerView: 3,
      spaceBetween: 0,
	  centeredSlides: true,
	  loop: true,
        navigation: {
          nextEl: ".pgcr-swiper-button-next",
          prevEl: ".pgcr-swiper-button-prev",
        },
      });
    $('.pgcr-left-icon').click(function(){
      $('.pgcr-swiper-button-prev').trigger("click")
    })
    $('.pgcr-right-icon').click(function(){
      $('.pgcr-swiper-button-next').trigger("click")
    
    })
   })
  </script>

{% schema %}
  {
    "name": "podx-go轮播图",
    "tag": "section",
    "class": "section",
    "settings":[
      {"type":"text","id":"heading","label":"标题"},
      {"type":"range","id":"heading_size","min":12,"max":60,"default":24,"step":2,"label":"标题尺寸"},
      {"type":"text","id":"text_1","label":"副标题"},
      {"type":"range","id":"text_size","min":12,"max":60,"default":24,"step":2,"label":"副标题尺寸"},
      {"type":"text","id":"href_id","label":"链接id"}
    ],
    "blocks":[
      {
        "type":"rotation_item",
        "name":"轮播图片",
        "limit":5,
        "settings":[
          {
            "type":"image_picker",
            "id":"image_1",
            "label":"选择轮播图片"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "podx-go轮播图",
        "blocks": [
          {
            "type":"rotation_item"
          }
        ]
      }
    ]
  }
{% endschema %}

