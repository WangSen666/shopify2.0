
<style>
  .podx-go-card-float{
    position:relative;
    max-width:1150px;
    margin:0 auto;
    padding:100px 0;
  }
  .podx-go-card-float-list{
    width:1150px;
    display:flex;
    justify-content:space-between;
    position:absolute;
    top:-100px;
    z-index:1;
  }
  .podx-go-card-float-item{
    width: 270px;
    height: 200px;
    border-radius: 14px;
    box-shadow: 0 0 1px #333333;
    text-align: center;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;
    background:#fff;
    cursor:pointer;
    padding:0 14px;
  }
  .podx-go-card-float-item:hover{
    box-shadow: 0 0 8px #333333;
    
  }
   .podx-go-card-float-list a{
      text-decoration:none;
     color:#333;
    }
   .podx-go-card-float-item img{
     max-width:50px;
   }
    .podx-go-card-title{
      position:absolute;
      bottom:0;
    }
  @media screen and (max-width:1180px){
    .podx-go-card-float-list{
      width:100% !important;
    }
    .podx-go-card-float-item{
      width:200px !important;
      height:150px !important;
   
    }
   
    .podx-go-card-float-item img{
      max-width:40px !important;
    }
    .text-wrapper{
      font-size:16px !important;
    }
  }
 .podx-go-card-title a{
      text-decoration:none !important;
    }
  @media screen and (max-width:750px){
    .podx-go-card-float{
      padding:24px 0 !important;
      height:250px !important;
    }
    .podx-go-card-float-list{
      width:96% !important;
      flex-wrap:wrap;
      left:50%;
      transform:translateX(-50%);
      top:-60px;
    }
    .podx-go-card-float-item{
      width:98% !important;
      height:50px !important;
      margin:6px auto !important;
      padding:0 14px !important;
      flex-direction:row !important;
      justify-content:space-between;
    }
    .podx-go-card-float-item img{
      max-width:30px;
      margin-right:14px;
    }
    .text-wrapper{
     font-size:14px !important;
    }
    .podx-go-card-title{
/*       margin-top:150px !important; */
      position:absolute;
      bottom:0;
      padding:0 14px;
    }
   
    .podx-go-card-float-list a{
      display:flex;
      flex-direction:row;
      margin:6px auto;
      justify-content:flex-start;
      width:100%;
    }
  }
</style>



<div class="podx-go-card-float">
  <div class="podx-go-card-float-list">
    {% for block in section.blocks %}
<!--     <a href="#{{block.settings.card_href_id  }}"> -->
      <div class="podx-go-card-float-item">
        
          <img src="{{ block.settings.image_1 | image_url }}" />
          <div class="text-wrapper" style="font-size:{{ block.settings.heading_size }}px;">
            {{ block.settings.heading }}
          </div>
       
      </div>
<!--     </a> -->
    {% endfor %}
  </div>

  <div class="podx-go-card-title" style="font-size:12px;color:#808080;margin-top:20px;">
    Support  > <a href="{{ section.settings.button_url }}" target="_blank"><span style="color:#9AD435;">Learning Center</span></a> 
  </div>
  

  
</div>



{% schema %}
  {
    "name": "podx-go浮动卡片组",
    "tag": "section",
    "class": "section",
    "settings":[
      {"type":"url","id":"button_url","label":"链接地址"}
    ],
    "blocks":[
      {
        "type":"card_item",
        "name":"卡片元素",
        "limit":4,
        "settings":[
          {
            "type":"image_picker",
            "id":"image_1",
            "label":"图片"
          },
          {
            "type":"text",
            "id":"card_href_id",
            "label":"链接模块的id"
          },
          {
            "type":"text",
            "id":"heading",
            "label":"标题"
          },
          {
            "type":"range",
            "id":"heading_size",
            "min":12,
            "max":60,
            "step":2,
            "unit":"px",
            "default":16,
            "label":"标题字体大小"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "podx-go浮动卡片组",
        "blocks": [
          {
            "type":"card_item"
          }
        ]
      }
    ]
  }
{% endschema %}

