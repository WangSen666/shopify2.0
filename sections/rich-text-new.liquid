.rich-text-new__wrapper{
  margin:0 auto;
}
 
/* 富文本卡片组 */
.rich-text-new__blocks{
  max-width:58%;
  margin:0 auto;
  text-align:center
}
.rich-text-new{
  background:#F1F1F1;
}
.yellow-boder{
  width:50px;
  height:4px;
  border-radius:4px;
  margin:20px auto 40px;
  background:#9ED835;
  display:block !important;
}
  .text-with-logo{
    width:170px;
    height:30px !important;
    vertical-align:middle;
  }
  .rich-text-new__heading span{
     font-family: "KumbhSans-Bold" !important;
  }
 @media screen and (max-width: 1680px){
   .rich-text-new__heading{
     font-size:42px !important;
   }
   .yellow-boder{
    margin:18px auto 34px;
    width:44px;
   }
 }
 @media screen and (max-width: 1500px){
    .rich-text-new__heading{
     font-size:36px !important;
     
   }
   .yellow-boder{
      margin:14px auto 30px;
      width:38px;
   }
 }
 @media screen and (max-width: 1380px){
    .rich-text-new__heading{
     font-size:32px !important;
   }
    .yellow-boder{
      margin:12px auto 26px;
      width:34px;
   }
 }
 @media screen and (max-width: 750px) {
  .rich-text-new__blocks {
    padding:0 10px !important;
    max-width:98%;
  }
   .rich-text-new__text{
     font-size:18px !important;
     display:block !important;
   }
   .rich-text-new__heading{
/*      font-size:28px !important; */
   }
}

{%- endstyle -%}

<div class="isolate{% unless section.settings.full_width %}  {% endunless %}">
  <div class="rich-text-new content-container color-{{ section.settings.color_scheme }}  gradient{% if section.settings.full_width %} rich-text-new--full-width content-container--full-width{% endif %} section-{{ section.id }}-padding">
    <div class="rich-text-new__wrapper {% if section.settings.is_background_radius=="true" %}text-border-radius{% endif %}  rich-text-new__wrapper--{{ section.settings.desktop_content_position }}{% if section.settings.full_width %} page-width{% endif %}">
      <div class="rich-text-new__blocks {{ section.settings.content_alignment }}">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'heading' -%}
            <h2
              class="rich-text-new__heading rte"
              {{ block.shopify_attributes }}
              style="text-align:{{ section.settings.content_alignment }};font-weight:{{ block.settings.font-weight }};color:{{ block.settings.heading_color }};font-size:{{ block.settings.font_size }}px;">
              {{ block.settings.heading | replace: 'p>', 'span>' }}
            </h2>
             {% when 'yellow_border' %}
              <div class="yellow-boder"></div>
            {%- when 'text' -%}
              <div
                class="rich-text-new__text rte"
                {{ block.shopify_attributes }}
                style="font-weight:{{ block.settings.font-weight }};font-size:{{ block.settings.font_size }}px;">
                {{ block.settings.text }}
              </div>
            {%- endcase -%}
        {%- endfor -%}
        
<!--         {% if section.settings.is_border=="true" %}
          <div class="yellow-boder"></div>
        {% endif %} -->
        
