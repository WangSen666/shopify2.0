        {%- for block in section.blocks -%}
        {%- case block.type -%}   
            {%- when 'text-with-logo' -%}
            <div
              class="rich-text-new__text"
              {{ block.shopify_attributes }}
              style="font-weight:{{ block.settings.font-weight }};font-size:{{ block.settings.font_size }}px;display:flex;align-items:center;">
              
              <div class="rich-text-new-logo-box">
                {% if block.settings.logo !=blank %}<img class="text-with-logo" src="{{ block.settings.logo|image_url }}" />{% endif %}
                {{ block.settings.text }}
              </div>
            </div>

          {%- endcase -%}
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>

<script>
  $(function(){
    // let logo_box=document.querySelector(".rich-text-new-logo-box");
    $('.rich-text-new-logo-box p').replaceWith(function(){
