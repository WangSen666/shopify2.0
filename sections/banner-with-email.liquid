
<style>
    .banner-with-email {
    width: 100%;
    position: relative;
    min-height:582px;
      /* padding-top:60px; */
  }

  .banner-with-email-bg {
    width: 100%;
    object-fit: cover;
    position: absolute;
    /* max-width: 1650px; */
    left: 50%;
    transform: translate(-50%, -50%);
    top: 50%;
    height: 100%;
    z-index: -1;
  }

  .podxgo-logo {
    max-width: 186px;
    margin: 0 auto;
    display: block;
  }

  .banner-with-email-content {
    max-width: 1650px;
    /* padding: 24px 0; */
    margin: 0 auto;
    min-height: 462px;
    padding: 24px;
  }

  .banner-with-email .title {
    font-size: 32px;
    line-height: 1.5;
    font-weight:bolder;
    /* color:#fff; */
    margin:80px 0 24px;
    display: flex;
    justify-content:space-between;
    flex-direction:row-reverse;
  }
 .banner-with-email .title  .title-text{
    max-width:60%;
  }
 .banner-with-email .title .title-img{
   /* max-width:20%; */
 }
  .banner-with-email .subtitle {
    font-size: 20px;
    font-weight:700;
    /* color:#fff; */
  }
  .pbr-banner-email-content{
    display:flex;
    align-items:center;
    max-width:40%;
    gap:20px;
    font-size:20px;
    margin:14px 0;
  }
  .content-num{
    font-size:28px;
    font-weight:bolder;
  }
  .content-text{
    max-width:70%;
    word-wrap:break-word;
    line-height:1.5;
    font-weight:700;
    font-size:18px;
  }
   .content-text .color-text{
    color:#0E3679;
  }
   .content-text .color-text .color-num{
     font-size:24px;
   }
  .content-img{
    max-width:120px;
    max-height:80px;
  }
  .banner-email{
    /* bottom:44px; */
    /* position:absolute; */
    width:44rem;
  }
  .banner-email form{
    display:block;
  }
  .banner-email form .bottom-filed-button{
    display:block;
    position:relative;
      color:#fff;
    background-color:rgb(46, 89, 85) !important;
    font-size:18px;
    padding:14px 24px;
    border-radius:10px;
    border:none;
    width:unset;
  }
  .bottom-filed::after{
    display:none;
  }
  .success-message{
    margin:24px auto 0;
    font-size:18px;
    color:#fff;
  }
  @media screen and (max-width:750px){
    .banner-with-email{
      padding-top:0;
    }
    .banner-with-email-content{
      padding:24px 14px;
    }
    
    .banner-email{
      width:80%;
    }
    .banner-with-email .title{
      margin:60px 0 24px;
      display:block;
      font-size:24px;
    }
    .banner-with-email .subtitle{
      font-size:16px;
    }
    .content-num{
      font-size:22px;
    }
    .banner-with-email .title .title-text{
      max-width:unset;
    }
    .pbr-banner-email-content{
      max-width:unset;
      margin:14px 0;
    }
    
    .content-text{
      /* max-width:unset; */
      font-size:14px;
    }
     .content-text .color-text .color-num{
       font-size:20px;
     }
    .content-img{
      max-width:80px;
    }
    .banner-email .bottom-filed-button{
      width:unset !important;
      padding:12px;
    }
    .banner-email .newsletter-form__message{
      color:#fff;
    }
  }
</style>

<div class="banner-with-email ">
  <img class="banner-with-email-bg" src="{{ section.settings.banner_bg|image_url }}" />
  <div class="banner-with-email-content page-width">
   
      <div class="title">
        <div class="title-img">
           {% if section.settings.logo %}
            <img class="podxgo-logo" src="{{ section.settings.logo|image_url }}" />
          {% endif %}
        </div>
        <div class="title-text">{{ section.settings.title }}</div>
        
        
      </div>

    {%- for block in section.blocks -%}
        {%- case block.type -%}

          {%  when 'subtitle' %}
            <div class="subtitle">{{ block.settings.text}}</div>

          {% when 'content' %}
          <!-- <div class="pbr-banner-email-content">
            <div class="content-num">{{ block.settings.content_num }}</div>
            <div class="content-text">{{ block.settings.text }}</div>
            <img class="content-img" src="{{ block.settings.content_img|image_url }}" />
          </div> -->
          {%- endcase -%}
      {%- endfor -%}
      <div class="pbr-banner-email-content">
        <div class="content-num">1</div>
        <div class="content-text">The first 20 customers will enjoy a <span class="color-text">$<span class="color-num">16,000</span> discount</span> on the Grande S1!</div>
        <img class="content-img" src="{{ section.settings.content_img_1|image_url }}" />
      </div>
     <div class="pbr-banner-email-content">
        <div class="content-num">2</div>
        <div class="content-text">Receive a complimentary home appliance bundle valued at <span class="color-text">$ <span class="color-num">1,699</span> !</span></div>
        <img class="content-img" src="{{ section.settings.content_img_2|image_url }}" />
      </div>
     <div class="pbr-banner-email-content">
        <div class="content-num">3</div>
        <div class="content-text">Enjoy a <span class="color-text">$<span class="color-num">1,400</span> discount</span> on the Renogy energy package (including installation) !</div>
        <img class="content-img" src="{{ section.settings.content_img_3|image_url }}" />
      </div>
      <div class="banner-email">
        {% form 'customer', class: 'newsletter-form' %}
            
            <input
              type="hidden"
              name="contact[tags]"
              value="newsletter">
        {%- if form.posted_successfully? !=true -%}
            <div class="newsletter-form__field-wrapper">
              <div class="field bottom-filed">
          
                <input
                  style="border-radius:14px;"
                  id="NewsletterForm--{{ section.id }}"
                  type="email"
                  name="contact[email]"
                  class="field__input"
                  value="{{ form.email }}"
                  aria-required="true"
                  autocorrect="off"
                  autocapitalize="off"
                  autocomplete="email"
                  {% if form.errors %}autofocusaria-invalid="true"aria-describedby="Newsletter-error--{{ section.id }}"{% elsif form.posted_successfully? %}aria-describedby="Newsletter-success--{{ section.id }}"{% endif %}placeholder="{{ 'newsletter.label' | t }}"required>
                <label class="field__label" for="NewsletterForm--{{ section.id }}">
                  <!--               {{ 'newsletter.label' | t }} -->
                  Enter Your E-mail
                </label>

              </div>
              
              {%- if form.errors -%}
                <small class="newsletter-form__message form__message" id="Newsletter-error--{{ section.id }}">{% render 'icon-error' %}{{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email'] }}</small>
              {%- endif -%}
            </div>
        {%- endif -%}
          <br />
            {%- if form.posted_successfully? !=true -%}
            <button type="submit"
                  class="newsletter-form__button field__button bottom-filed-button"
                  name="commit"
                  id="Subscribe"
                  aria-label="{{ 'newsletter.button_label' | t }}">{% comment %} {% render 'icon-arrow' %} {% endcomment %}Stay Tuned
            </button>
        {%- endif -%}
          {%- if form.posted_successfully? -%}
              <!-- <h3
                class="newsletter-form__message newsletter-form__message--success form__message"
                id="Newsletter-success--{{ section.id }}"
                tabindex="-1"
                autofocus>{% render 'icon-success' %}{{ 'newsletter.success' | t }}</h3> -->
              <div class="success-message">
                Success! You will receive the most updated PODX GO floorplan, interior design, living tips, and promotion news. 
              </div>
            {%- endif -%}
          {% endform %}
      </div>
  </div>
</div>





{% schema %}
  {
    "name": "banner with email",
    "tag":"section",
    "class":"section",
    "settings": [
      {"type":"text","id":"title","label":"标题"},
      {"type":"image_picker","id":"banner_bg","label":"背景图片"},
      {"type":"image_picker","id":"logo","label":"banner中的logo"},
      {"type":"image_picker","id":"content_img_1","label":"内容部分图片1"},
      {"type":"image_picker","id":"content_img_2","label":"内容部分图片2"},
      {"type":"image_picker","id":"content_img_3","label":"内容部分图片3"}
    ],
    "blocks":[
      {"type":"subtitle","name":"副标题","settings":[
        {"type":"text","id":"text","label":"副标题内容"}
      ]},
      {"type":"title","name":"标题","settings":[
        {"type":"text","id":"text","label":"标题内容"}
      ]},
      {"type":"content","name":"内容","settings":[
        {"type":"text","id":"content_num","label":"内容序号"},
        {"type":"text","id":"text","label":"内容文案"},
        {"type":"image_picker","id":"content_img","label":"内容后面图片"}
      ]}
    ],
    "presets":[
      {
        "name":"banner with email",
        "blocks":[
          {"type":"subtitle"},
          {"type":"content"}
        ]
      }
      
    ]
  }
{% endschema %}



