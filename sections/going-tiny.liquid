<link
  rel="stylesheet"
  href="{{ 'component-rte.css' | asset_url }}"
  media="print"
  onload="this.media='all'">
<link
  rel="stylesheet"
  href="{{ 'section-going-tiny.css' | asset_url }}"
  media="print"
  onload="this.media='all'">

<noscript>{{ 'component-rte.css' | asset_url | stylesheet_tag }}</noscript>
<noscript>{{ 'section-going-tiny.css' | asset_url | stylesheet_tag }}</noscript>

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

 @media screen and (max-width: 1080px) {
    .going-tiny .going-tiny__heading{font-size:28px !important;}
    .going-tiny-card-group{font-size:18px !important;flex-wrap:wrap;}
  }

.going-tiny__wrapper{
  margin:0 auto;
}
 
/* 富文本卡片组 */
.going-tiny__blocks{
  max-width:70%;
  margin:0 auto;
  text-align:center
}
.going-tiny{
  background:#F1F1F1;
}
.going-tiny-yellow-boder{
  width:100%;
  height:2px;
  border-radius:4px;
  margin:40px auto;
  background:#9ED835;
  display:block !important;
}
  .going-tiny__href_item a{
    display:block;
    width:100%;
    text-decoration:none;
    text-align:left;
    color:#808080;
    cursor:pointer;
  }
  .going-tiny__href_item a:hover{
    color:#AFAFAF;
  }
  .going-tiny__heading  span{
    font-family: "KumbhSans-Bold" !important;
  }
 @media screen and (max-width: 750px) {
  .going-tiny__blocks {
    padding:0 10px !important;
    max-widht:100% !important;
  }
   .going-tiny-yellow-boder{
     margin:20px auto;
   }
}

{%- endstyle -%}

<div class="isolate{% unless section.settings.full_width %}  {% endunless %}">
  <div class="going-tiny content-container color-{{ section.settings.color_scheme }} gradient{% if section.settings.full_width %} going-tiny--full-width content-container--full-width{% endif %} section-{{ section.id }}-padding">
    <div class="going-tiny__wrapper {% if section.settings.is_background_radius=="true" %}text-border-radius{% endif %}  going-tiny__wrapper--{{ section.settings.desktop_content_position }}{% if section.settings.full_width %} page-width{% endif %}">
      <div class="going-tiny__blocks {{ section.settings.content_alignment }}">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'heading' -%}
            <h2
              class="going-tiny__heading rte {{ block.settings.heading_size }}"
              {{ block.shopify_attributes }}
              style="text-align:{{ section.settings.content_alignment }};font-weight:{{ block.settings.font-weight }};color:{{ block.settings.heading_color }};font-size:{{ block.settings.font_size }}px">
              {{ block.settings.heading | replace: 'p>', 'span>' }}
            </h2>
            {%- endcase -%}
        {%- endfor -%}
        
        
        
        {%- for block in section.blocks -%}
        {%- case block.type -%}   
            {%- when 'text' -%}
            <div
              class="going-tiny__text rte"
              {{ block.shopify_attributes }}
              style="font-weight:{{ block.settings.font-weight }};font-size:{{ block.settings.font_size }}px;">
              {{ block.settings.text }}
            </div>

          {%- endcase -%}
        {%- endfor -%}
        {% if section.settings.is_border=="true" %}
          <div class="going-tiny-yellow-boder"></div>
        {% endif %}
        <div class="going-tiny__href-box">
          {%- for block in section.blocks -%}
            {%- case block.type -%}   
              {%- when 'href_text' -%}
                <div
                  class="going-tiny__href_item"
                  {{ block.shopify_attributes }}
                  style="font-weight:{{ block.settings.font-weight }};font-size:{{ block.settings.font_size }}px;">
                  <a target="_blank" href="{{ block.settings.href_text_link }}">
                    <span style="font-size:{{ block.settings.font_size }}px;color:#9AD435;">+</span>
                    {{ block.settings.href_text_label }}
                  </a>
                  
                </div>
    
              {%- endcase -%}
            {%- endfor -%}
        </div>
      </div>
    </div>
  </div>
</div>


{% schema %}
  {
    "name": "going tiny",
    "tag": "section",
    "class": "section",
    "settings": [
     
      
      {
        "type": "select",
        "id": "color_scheme",
        "options": [
          {
            "value": "accent-1",
            "label": "t:sections.all.colors.accent_1.label"
          },
          {
            "value": "accent-2",
            "label": "t:sections.all.colors.accent_2.label"
          },
          {
            "value": "background-1",
            "label": "t:sections.all.colors.background_1.label"
          },
          {
            "value": "background-2",
            "label": "t:sections.all.colors.background_2.label"
          }, {
            "value": "inverse",
            "label": "t:sections.all.colors.inverse.label"
          }
        ],
        "default": "background-1",
        "label": "t:sections.all.colors.label"
      },
      {
        "type": "select",
        "id": "is_border",
        "options": [
          {
            "value": "true",
            "label": "是"
          },
          {
            "value": "false",
            "label": "否"
          }
        ],
        "default": "true",
        "label": "是否有黄色border"
      },
      {
        "type": "select",
        "id": "is_background_radius",
        "options": [
          {
            "value": "true",
            "label": "是"
          },
          {
            "value": "false",
            "label": "否"
          }
        ],
        "default": "true",
        "label": "是否有圆角背景"
      },
     {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 40
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 52
      }
    ],
    "blocks": [
      {
        "type": "heading",
        "name": "富文本标题",
        "limit": 3,
        "settings": [
          {
            "type": "richtext",
            "id": "heading",
            "default": "<p>Talk about your brand</p>",
            "label": "标题内容"
          }, {
            "type": "select",
            "id": "heading_size",
            "options": [
              {
                "value": "h2",
                "label": "t:sections.all.heading_size.options__1.label"
              }, {
                "value": "h1",
                "label": "t:sections.all.heading_size.options__2.label"
              }, {
                "value": "h0",
                "label": "t:sections.all.heading_size.options__3.label"
              }, {
                "value": "hxl",
                "label": "t:sections.all.heading_size.options__4.label"
              }
            ],
            "default": "h1",
            "label": "t:sections.all.heading_size.label"
          }, {
            "type": "range",
            "id": "font-weight",
            "min": 0,
            "max": 900,
            "step": 100,
            "label": "字体加粗",
            "default": 400
          },
          {
            "type": "range",
            "id": "font_size",
            "min": 0,
            "max": 100,
            "step": 2,
            "unit": "px",
            "label": "字体大小",
            "default": 48
          },
          {
            "type":"select",
            "id": "heading_color",
            "options": [
              {
                "value": "#B5EF35",
                "label": "主题色"
              }, {
                "value": "#fff",
                "label": "白色"
              }, {
                "value": "#000",
                "label": "黑色"
              }
            ],
            "default": "#000",
            "label": "黑色"
          }
        ]
      },
      {
        "type": "text",
        "name": "文本内容",
        "limit": 3,
        "settings": [
          {
            "type": "richtext",
            "id": "text",
            "default": "<p>Share information about your brand with your customers. Describe a product, make announcements, or welcome customers to your store.</p>",
            "label": "文本内容"
          }, {
            "type": "range",
            "id": "font-weight",
            "min": 0,
            "max": 900,
            "step": 100,
            "label": "字体加粗",
            "default": 400
          },
          {
            "type": "range",
            "id": "font_size",
            "min": 0,
            "max": 100,
            "step": 2,
            "unit": "px",
            "label": "字体大小",
            "default": 20
          },
          {
            "type":"select",
            "id": "text_color",
            "options": [
              {
                "value": "#B5EF35",
                "label": "主题色"
              }, {
                "value": "#fff",
                "label": "白色"
              }, {
                "value": "#000",
                "label": "黑色"
              }
            ],
            "default": "#000",
            "label": "黑色"
          }
        ]
      },
      {
        "type":"href_text",
        "name":"超链接",
        "limit":10,
        "settings":[
          {"type":"text","id":"href_text_label","label":"超链接内容"},
          {"type":"url","id":"href_text_url","label":"超链接位置"},
          {"type":"range","id":"font_size","min":12,"max":50,"step":2,"default":16,"label":"字体大小"},
          {"type":"range","id":"font_weight","min":100,"max":900,"step":100,"default":400,"label":"字体粗细"}
        ]
      }
    ],
    "presets": [
      {
        "name": "going tiny",
        "blocks": [
          {
            "type": "heading"
          }, {
            "type": "text"
          },{
            "type":"href_text"
          }
          
        ]
      }
    ]
  }
{% endschema %}