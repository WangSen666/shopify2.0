{%- style -%}
  .order-process{
    border-top: 2px solid #888988;
  }
  .order-process-title{
    text-align:center;
  }
  .order-process-title-border{
    width:100px;
    height:2px;
    background:#9ED835;
    margin:14px auto;
    display:block !important;
  }
  .orde-process-box{
    padding:44px 0;
  }
.process-item{
  display:flex;
  justify-content:space-around;
  position:relative;
}
  .row-reverse{
    flex-direction:row-reverse;
  }
  .process-wrapper{
    box-shadow:0 0 14px #807373;
   border-radius:14px;
    width:426px;
/*     height:426px; */
  }
  .process-number-wrapper{
     display:flex;
    flex-direction:column;
    justify-content:center;
  }
  .process-img{
    height:224px;
     border-top-left-radius:14px;
    border-top-right-radius:14px;
    width:100%;
  }
  .process-text{
    padding:14px;
  }
  .process-button{
    margin:24px auto;
    display:block;
    width:180px;
    background: #9ED835;
    height: 40px;
    line-height: 40px;
    border-radius:14px;
    color:#fff;
    font-size:16px;
    text-align:center;
  }
  .process-number{
    width:50px;
    height:50px;
    border-radius:26px;
    text-align:center;
    line-height:50px;
    background:#2E5955 !important;
    color:#fff;
    margin:24px auto;
    font-size:24px;
  }
  
  .process-text-1{
    background:#eeeeee;
    width:360px;
    border-radius:14px;
    line-height:50px;
    font-size:20px;
    text-align:center;
    margin:24px auto;
    box-shadow:0 0 8px #807373;
  }
  .order-process-line-box{
    display:block !important;
    position:absolute;
    left:50%;
    transform:translateX(-50%);
    height:100%;
  }
  
   .order-process-line-top{
      position:absolute;
      left:50%;
      display:block !important;
      top:0;
      width:3px;
      height:50%;
      background:#888988; 
   }
  .order-process-line-bottom{
    position:absolute;
    left:50%;
    top:calc(50% + 14px);
    display:block !important;
    width:3px;
    height:calc(50% - 7px);
    background:#888988; 
  }
  .line-byte{
    width:14px;
    height:14px;
    border-radius:8px;
    background:#888988;
    display:block !important;
    position:absolute;
    left: 50%;
    transform: translateX(-40%);
    top:50%;
  }
  .process-item:first-child .order-process-line-top{
    display:none !important ;
  }
  .process-item:first-child .order-process-line-bottom{
    background:#9ED835;
  }
  .process-item:nth-child(2) .order-process-line-top{
    background:#9ED835;
  }
 .process-item:first-child .line-byte{
    background:#9ED835;
 }
   .process-item:nth-child(2) .line-byte{
     background:none;
     border:1px solid #2E5955
   }
  .process-item:last-child .order-process-line-bottom{
   display:none !important
  }

  @media screen and (max-width:1400px){
     .order-process-title{
       font-size:36px !important;
     }
    .orde-process-box{
      padding:24px 0;
    }
    .process-wrapper{
      width:346px;
    }
    .process-text{
      font-size:14px;
    }
    .process-text-1{
      width:266px;
      font-size:16px;
    }
  }
  @media screen and (max-width:990px){
    .order-process-line-box{
      display:none !important;
    }
     .process-item{
       flex-direction:column-reverse !important;
       margin:24px auto;
     }
    .process-wrapper{
      width:90%;
      height:unset;
      margin: 0 auto;
    }
     .process-number{
       width:40px;
       height:40px;
       font-size:20px;
       line-height:40px;
     }
  }
{%- endstyle -%}

<div class="order-process page-width">
   <h2 class="order-process-title" style="font-size:{{ section.settings.heading_size }}px;">{{ section.settings.heading }}</h2>
  <div class="order-process-title-border"></div>
  <div class="orde-process-box">
    {% for block in section.blocks %}
      {%- case block.type -%}
        {% when "process_item" %}
        <div class="process-item {% if block.settings.content_position=="right" %}row-reverse{% endif %}" >
          <div class="process-wrapper">
            <div class="process-img" style="background:url('{{  block.settings.process_img|image_url }}') no-repeat center center;background-size:cover;">
<!--               <img src="{{ block.settings.process_img|image_url }}" /> -->
            </div>
            <div class="process-text">{{ block.settings.process_text }}</div>
             {%- if block.settings.button_link != blank -%}
                <a target="_blank" {% if block.settings.button_link == blank %}role="link"aria-disabled="true"{% else %}href="{{ block.settings.button_link }}"{% endif %} class="process-button button{% if block.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}">{{ block.settings.button_label | escape }}</a>
              {%- endif -%}
            
          </div>
          <div class="order-process-line-box">
              <div class="line-byte"></div>
              <div class="order-process-line-top"></div>
              <div class="order-process-line-bottom"></div>
            
          </div>
          <div class="process-number-wrapper">
            <div class="process-number">{{ block.settings.process_number }}</div>
            <div class="process-text-1">{{ block.settings.process_text_1 }}</div>
          </div>
          
        </div>
    
      {% endcase %}
    {% endfor %}

    
  </div>
</div>






{% schema %}
  {
    "name": "order process",
    "settings": [
      {
        "type":"text",
        "id":"heading",
        "label":"标题"
      },
       {
        "type": "range",
        "id": "heading_size",
        "min": 12,
        "max": 60,
        "default": 24,
        "step": 2,
        "label": "标题尺寸"
      }
    ],
    "blocks":[
      {"type":"process_item","name":"时间线内容","limit":5,
        "settings":[
          {
            "type":"image_picker",
            "id":"process_img",
            "label":"图片内容"
          },
          {
            "type":"text",
            "id":"process_text",
            "label":"时间线元素文案"
          },
          {
            "type":"text",
            "id":"process_text_1",
            "label":"时间线序号下文案"
          },
          {
            "type":"text",
            "id":"button_label",
            "default":"Button label",
            "label":"按钮文案"
          },
          {
            "type":"url",
            "id":"button_link",
            "label":"按钮链接"
          },
          {
            "type":"text",
            "id":"process_number",
            "label":"时间线序号"
          },
          {
            "type":"select",
            "id":"content_position",
            "options":[
              {
                "value":"left",
                "label":"左边"
              },
              {
                "value":"right",
                "label":"右边"
              }
            ],
            "default":"left",
            "label":"文案内容位置"
          }
        ]
      }
    ],
    "presets":[
      {
        "name":"order process",
        "blocks":[
          {"type":"process_item"}
        ]
      }
    ]
  }
{% endschema %}