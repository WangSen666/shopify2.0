{% schema %}
  {
    "name": "3D View Indoor",
    "settings": [
      {
        "type":"text",
        "id":"heading",
        "label":"标题"
      },
       {
        "type": "range",
        "id": "heading_size",
        "min": 12,
        "max": 60,
        "default": 24,
        "step": 2,
        "label": "标题尺寸"
      },
      {
        "type":"text",
        "id":"content",
        "label":"文案内容"
      },
      {
        "type": "range",
        "id": "content_size",
        "min": 12,
        "max": 60,
        "default": 24,
        "step": 2,
        "label": "文案尺寸"
      },
      {
        "type": "text",
        "id": "button_label",
        "default": "Button label",
        "label": "t:sections.rich-text.blocks.buttons.settings.button_label_1.label",
        "info": "t:sections.rich-text.blocks.buttons.settings.button_label_1.info"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "t:sections.rich-text.blocks.buttons.settings.button_link_1.label"
      }
    ],
    "blocks":[
      {"type":"3d_image","name":"图片内容","limit":3,
        "settings":[
          {
            "type":"image_picker",
            "id":"image",
            "label":"图片内容"
          }
        ]
      }
    ],
    "presets":[
      {
        "name":"3D View Indoor",
        "blocks":[
          {"type":"3d_image"}
        ]
      }
    ]
  }
{% endschema %}
