<div id="Banner-{{ section.id }}" class="bg_wrapper banner-new-rotation   banner--content-align-{{ section.settings.desktop_content_alignment }} banner--content-align-mobile-{{ section.settings.mobile_content_alignment }} banner--{{ section.settings.image_height }}{% if section.settings.stack_images_on_mobile and section.settings.image != blank and section.settings.image_2 != blank %} banner--stacked{% endif %}{% if section.settings.adapt_height_first_image and section.settings.image != blank %} banner--adapt{% endif %}{% if section.settings.show_text_below %} banner--mobile-bottom{%- endif -%}{% if section.settings.show_text_box == false %} banner--desktop-transparent{% endif %} ">
    <div class="banner-component__media media banner-video">
      <video class="pc-banner-video" src="{{ section.settings.video_url }}" autoplay  loop muted ></video>
      <video class="mobile-banner-video" src="https://cdn.shopify.com/videos/c/o/v/d54f3ba5f2dc4217a964131905b7fa13.mov" autoplay  loop muted ></video>
      
      <img class="mobile-banner-view" src="https://cdn.shopify.com/s/files/1/0596/2249/0212/files/home-page-banner.jpg?v=1691743180"/>
    </div>
  <div class="banner-component__content  page-width">
    <div class="banner-new-rotation__box banner-new-rotation__box--{{ section.settings.desktop_content_position }} content-container content-container--full-width-mobile color-{{ section.settings.color_scheme }} gradient" style="right:{% if section.settings.text_place=="right" %} 0; {% endif %}">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'heading' -%}
          <h2
            class="banner-component-heading"
            {{ block.shopify_attributes }}
            style="text-align:left;font-size:{{ block.settings.font_size }}px;margin-top:{{ block.settings.margin_top }}px;margin-bottom:{{ block.settings.margin_bottom }}px;color:{{ block.settings.heading_color }}; font-weight: {{ block.settings.font_weight }};">
            <span>{{ block.settings.heading | escape }}</span>
          </h2>
          {% when 'heading_rotation' %}
          <h2
            class="banner-component-heading heading-rotation"
            {{ block.shopify_attributes }}
            style="text-align:left;font-size:{{ block.settings.font_size }}px;margin-top:{{ block.settings.margin_top }}px;margin-bottom:{{ block.settings.margin_bottom }}px;color:{{ block.settings.heading_color }}; font-weight: {{ block.settings.font_weight }};">
            <span>{{ block.settings.heading | escape }}</span>
          </h2>
          {% when "text" %}
          <div>
            <p
            class="banner-component-text"
            {{ block.shopify_attributes }}
            style=text-align:left;font-size:{{ block.settings.font_size }}px;margin-top:{{ block.settings.margin_top }}px;margin-bottom:{{ block.settings.margin_bottom }}px;color:{{ block.settings.heading_color }}; font-weight: {{ block.settings.font_weight }};">
            <span>{{ block.settings.text | escape }}</span>
            </p>
          </div>
          {%  when 'buttons' %}
          {% if block.settings.banner_button_label != blank %}
            <div class="banner__right_bottom_info_btn banner-video-button" {{ block.shopify_attributes }} style="background:{{ block.settings.button_color }};{% if block.settings.button_color=="#eb1478" %}border:1px solid {{ block.settings.button_color }};{% endif %}">
              <a target="_blank" style="font-size:{{ block.settings.font_size }}px;" {% if block.settings.banner_button_link == blank %}role="link"aria-disabled="true"{% else %}href="{{ block.settings.banner_button_link }}"{% endif %}class="button banner-new-rotation-button {% if block.settings.button_style_secondary_1 %} button--secondary{% else %} button--primary{% endif %}">{{ block.settings.banner_button_label | escape }}</a>
            </div>
            {% endif %}
          
        {%- endcase -%}
      {%- endfor -%}
      
    </div>
    {%- for block in section.blocks -%}
      {%- case block.type -%}
      {%- when 'bannerComponentBottomInfo' -%}
          <div class="banner-new-rotation-bottom-info" style="{% if block.settings.is_border == 'true' %}border-bottom: 1px solid #fff;{% endif %} {% if block.settings.banner_button_place=="left" %}flex-direction: row-reverse{% endif %};">
            <div class="banner__left_bottom_info " {{ block.shopify_attributes }}>
            {% if block.settings.heading!=blank %}
              <p>{{ block.settings.heading | escape }}</p>
            {% endif %}
            {% if block.settings.heading==blank %}
              <div class="banner-href-icon">
                  {%- for block_child in section.blocks -%}
                  {%- case block_child.type -%}
                    {%- when 'banner_href_icon' -%}
                      <a class="banner-href-icon-item" href="#{{ block_child.settings.href_id }}">
                          <div class="" style="text-align:center;">
                            <img src="{{ block_child.settings.icon_item | image_url }}" width="{{ block_child.settings.icon_width }}" />
                            <div class="banner-href-icon-item-text" style="font-size:{{ block_child.settings.font_size }}px;color:#fff;">
                              {{ block_child.settings.banner_href_text}}
                            </div>
                          </div>
                          
                      </a>
                  {%- endcase -%}
                {%- endfor -%}
              </div>
            {% endif %}
            
              {% comment %} <p>{{ block.settings.heading_1 | escape }}<span class="price">{{ block.settings.price | escape }}</span>
              </p> {% endcomment %}
            </div>
            <div class="banner__right_bottom_info">
          {% if block.settings.banner_button_label != blank %}
              <div class="banner__right_bottom_info_btn" {{ block.shopify_attributes }}>
                <a target="_blank" {% if block.settings.banner_button_link == blank %}role="link"aria-disabled="true"{% else %}href="{{ block.settings.banner_button_link }}"{% endif %}class="button banner-new-rotation-button {% if block.settings.button_style_secondary_1 %} button--secondary{% else %} button--primary{% endif %}">{{ block.settings.banner_button_label | escape }}</a>
                <img
                  src="{{'button_logo_1.png'  | asset_url }}"
                  width="12"
                  height="12" />
              </div>
              {% endif %}
              {% if block.settings.banner_button_label_1 != blank %}
                <div class="banner__right_bottom_info_btn" {{ block.shopify_attributes }}>
                  <a target="_blank" {% if block.settings.banner_button_link_1 == blank %}role="link"aria-disabled="true"{% else %}href="{{ block.settings.banner_button_link_1 }}"{% endif %}class="button banner-new-rotation-button {% if block.settings.button_style_secondary_1 %} button--secondary{% else %} button--primary{% endif %}">{{ block.settings.banner_button_label_1 | escape }}</a>
                  <img
                    src="{{'button_logo_1.png'  | asset_url }}"
                    width="12"
                    height="12" />
                </div>
              {% endif %}
            </div>
          </div>

       {%- endcase -%}
      {%- endfor -%}
  </div>
  
</div>
