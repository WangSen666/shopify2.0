  /* banner 组件 */
  .banner-new-rotation {
    position: relative
  }
  .banner-new-rotation .banner-component__content {
    display: block;
    width: 100%;
    height: 100%;
    position: absolute;
    left: 50%;
    top: 0;
    transform: translateX(-50%);
    text-align: left;
  }
/*   轮播图处理 */
